{
  "include": [
    "game/**/*",
    "routes/**/*",
    "server.ts",
    "socket.service.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2017"
    ],
    "types": [
      "node"
    ],
    "importHelpers": true,
    "removeComments": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
