{
  "include": [
    "game/**/*",
    "routes/**/*",
    "./*.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2017"
    ],
    "types": [
      "node", "jest"
    ],
    "importHelpers": true,
    "removeComments": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "./node_modules",
    "**/*.spec.ts",
    "client",
    "dist"
  ]
}
