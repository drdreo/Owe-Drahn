{
    "name": "server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "build:prod": "nest build && pnpm sentry:sourcemaps",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main.js",
        "lint": "eslint ./src",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "sentry:sourcemaps": "sentry-cli sourcemaps inject --org drdreo --project owe-drahn-server ./dist && sentry-cli sourcemaps upload --org drdreo --project owe-drahn-server ./dist"
    },
    "dependencies": {
        "@nestjs/cli": "^11.0.2",
        "@nestjs/common": "^11.0.9",
        "@nestjs/core": "^11.0.9",
        "@nestjs/platform-express": "^11.0.9",
        "@nestjs/platform-socket.io": "^11.0.9",
        "@nestjs/serve-static": "^5.0.2",
        "@nestjs/websockets": "^11.0.9",
        "@sentry/cli": "^2.42.2",
        "@sentry/nestjs": "^9.3.0",
        "@sentry/profiling-node": "^9.3.0",
        "body-parser": "^1.20.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express-session": "^1.18.1",
        "firebase-admin": "^13.1.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.1",
        "socket.io": "^4.8.1",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.9",
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.1",
        "@types/socket.io": "^3.0.2",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.24.0",
        "eslint": "^9.20.1",
        "globals": "^15.15.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "typescript-eslint": "^8.24.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
